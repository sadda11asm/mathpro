<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backback"
    android:orientation="vertical"
    tools:context="ca.javajeff.mathpro.RegisterActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="111dp"
        android:layout_height="23dp"
        android:layout_marginTop="27dp"
        android:background="#AF6bf9f0"
        android:elevation="5dp"
        android:fontFamily="casual"
        android:onClick="onSkip"
        android:text="Skip"
        android:textColor="@drawable/color_selector2"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in" />

    <TextView
        android:id="@+id/math_pro"
        android:layout_width="297dp"
        android:layout_height="83dp"
        android:layout_marginTop="8dp"
        android:backgroundTintMode="add"
        android:elevation="16dp"
        android:fontFamily="casual"
        android:text="MathPro"
        android:textAlignment="center"
        android:textColor="#3797ad"
        android:textIsSelectable="false"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/math_image"
        app:layout_constraintVertical_bias="0.108"
        tools:fontFamily="casual" />

    <ImageView
        android:id="@+id/math_image"
        android:layout_width="200dp"
        android:layout_height="178dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083"
        app:srcCompat="@drawable/circles" />

    <Button
        android:id="@+id/vk"
        android:layout_width="309dp"
        android:layout_height="43dp"
        android:layout_marginTop="71dp"
        android:background="#AF6bf9f0"
        android:elevation="5dp"
        android:fontFamily="casual"
        android:onClick="onPhoneLogin"
        android:text="LOG IN WITH PHONE NUMBER"
        android:textColor="@drawable/color_selector2"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/math_pro" />

    <Button
        android:id="@+id/sign_in"
        android:layout_width="309dp"
        android:layout_height="43dp"
        android:layout_marginTop="19dp"
        android:background="#AF6bf9f0"
        android:elevation="5dp"
        android:fontFamily="casual"
        android:onClick="onEmailLogin"
        android:text="LOG IN WITH EMAIL"
        android:textColor="@drawable/color_selector2"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vk" />

    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        style="?android:attr/progressBarStyle"
        android:layout_width="404dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/math_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="150dp" />

</android.support.constraint.ConstraintLayout>