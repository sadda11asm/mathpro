<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    xmlns:tools2="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorBack">

    <TextView
        android:id="@+id/name"
        android:layout_width="72dp"
        android:layout_height="35dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Name:"
        android:textColor="@color/colorBlack"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        tools:layout_constraintTop_toBottomOf="@+id/score"
        android:layout_marginLeft="16dp"
        tools:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/own_name"
        android:layout_width="145dp"
        android:layout_height="35dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:text="MustBeName"
        android:textColor="@color/colorBlack"
        android:textSize="26sp"
        android:visibility="invisible"
        tools:layout_constraintLeft_toRightOf="@+id/name"
        tools:layout_constraintTop_toBottomOf="@+id/own_score" />

    <EditText
        android:id="@+id/enter_name"
        android:layout_width="193dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/own_country"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:hint="Please enter your name"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        tools:layout_constraintTop_toBottomOf="@+id/own_score"
        tools:layout_constraintLeft_toRightOf="@+id/name"
        android:layout_marginLeft="17dp" />

    <TextView
        android:id="@+id/id"
        android:layout_width="72dp"
        android:layout_height="29dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:text="ID:"
        android:textColor="@color/colorBlack"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/own_id"
        android:layout_width="210dp"
        android:layout_height="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-condensed"
        android:text="ID"
        android:textColor="@color/colorBlack"
        android:textSize="26sp"
        tools:layout_constraintLeft_toRightOf="@+id/id"
        tools:layout_constraintTop_toBottomOf="@+id/own_name" />

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="11dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Country:"
        android:textColor="@color/colorBlack"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_toBottomOf="@+id/id" />

    <TextView
        android:id="@+id/own_country"
        android:layout_width="167dp"
        android:layout_height="34dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="11dp"
        android:fontFamily="sans-serif-condensed"
        android:text="MustBeCountry"
        android:textColor="@color/colorBlack"
        android:textSize="26sp"
        android:visibility="invisible"
        tools:layout_constraintLeft_toRightOf="@+id/country"
        tools:layout_constraintTop_toBottomOf="@+id/own_id" />

    <EditText
        android:id="@+id/enter_country"
        android:layout_width="193dp"
        android:layout_height="39dp"
        android:layout_below="@+id/enter_name"
        android:layout_toEndOf="@+id/own_score"
        android:layout_toRightOf="@+id/own_score"
        android:fontFamily="sans-serif-condensed"
        android:hint="Please enter your country"
        android:textSize="16sp"
        tools:layout_constraintLeft_toRightOf="@+id/country"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        tools:layout_constraintTop_toBottomOf="@+id/own_id" />

    <TextView
        android:id="@+id/score"
        android:layout_width="74dp"
        android:layout_height="43dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Score:"
        android:textColor="@color/colorBlack"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_toBottomOf="@+id/text_title" />

    <TextView
        android:id="@+id/own_score"
        android:layout_width="151dp"
        android:layout_height="43dp"
        android:layout_above="@+id/enter_name"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/enter_name"
        android:layout_toStartOf="@+id/enter_name"
        android:fontFamily="sans-serif-condensed"
        android:text="MustBeScore"
        android:textAlignment="textStart"
        android:textColor="@color/colorBlack"
        android:textSize="26sp"
        tools:layout_constraintLeft_toRightOf="@+id/score"
        tools:layout_constraintTop_toBottomOf="@+id/text_title" />
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewde"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="3dp"
        tools2:layout_editor_absoluteY="375dp"
        tools2:layout_editor_absoluteX="287dp">

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/enter_name"
        android:layout_marginTop="-17dp"
        android:background="@color/colorPrimary"
        android:contextClickable="false"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:text="My Account"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_constraintHorizontal_bias="1.0"
        tools:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_name"
        android:layout_width="49dp"
        android:layout_height="29dp"
        android:layout_marginLeft="13dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Add"
        android:textSize="12dp"
        tools:layout_constraintLeft_toRightOf="@+id/enter_name"
        android:layout_marginTop="14dp"
        tools:layout_constraintTop_toBottomOf="@+id/own_score" />

    <Button
        android:id="@+id/add_country"
        android:layout_width="49dp"
        android:layout_height="29dp"
        android:layout_marginLeft="13dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Add"
        android:textSize="12dp"
        tools:layout_constraintLeft_toRightOf="@+id/enter_country"
        android:layout_marginTop="11dp"
        tools:layout_constraintTop_toBottomOf="@+id/own_id" />


</android.support.constraint.ConstraintLayout>