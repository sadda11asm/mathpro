<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <android.support.v7.widget.CardView xmlns:card_view3="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            card_view3:cardCornerRadius="4dp"
            card_view3:cardElevation="3dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="0dp">

            <TextView
                android:id="@+id/name_solver"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="290dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Name"
                android:textAlignment="textEnd"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

            <io.github.kexanie.library.MathView
                android:id="@+id/solution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:engine="KaTeX"></io.github.kexanie.library.MathView>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>